/* 标准化浏览器样式 */
@import './normalize.styl'
/* stylus样式变量 */
@import './variable.styl'
/* 初始化 */
*
    margin 0
    padding 0
html, body
    display block
    font-size $s_base_font
    line-height 1.4
    color $c_website_base_font
body
    font-family 'Microsoft Yahei UI', 'Microsoft Yahei', '微软雅黑', 'Segoe UI', 'Tahoma', 'SimSun', 'sans-serif'
    display block
    border 0
    margin 0
    padding 0
    background $c_website_bg
    // 让字体更清晰
    -webkit-font-smoothing antialiased
a
    color inherit
    text-decoration none
del
    text-decoration line-through
p, h1, h2, h3, h4, h5, h6
    margin 0
    padding 0
    display block
button
    cursor pointer
button, input
    outline none
ul, li
    margin 0
    padding 0
    list-style none
section, div, span, em, i, p, h1, h2, h3, h4, h5, h6
    cursor default
a, a *
    cursor pointer
em, i, strong
    font-style normal
    font-weight normal
